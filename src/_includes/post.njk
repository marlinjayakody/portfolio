      <ul id="nav">
        {%- for post in collections.sinhala -%}
        <li {% if page.url == post.url %} aria-current="page"{% endif %} class="my-3"><a href="{{ post.url }}" class="text-lg px-4 py-2 w-100 block text-warmgray-800 rounded transition duration-300 hover:bg-warmgray-200 ">{{ post.data.title }}</a></li>
        {%- endfor -%}
        </ul>
