---
layout: layout.njk
---
<div class="container-fluid">
<div class="mj-post flex flex-grow">
  <div class="sidebar py-8 w-1/3 md:w-1/4 pl-14 lg:w-3/12 xl:w-3/12 3xl:w-2/12 border-r-2 pr-4 border-warmgray-900 hidden lg:block">
    <ul id="nav">
      {% for post in collections.post %}
      <li class=" "><a href="{{ post.url }}" class="text-lg px-4 py-2 w-100 block text-warmgray-800 rounded transition duration-300">{{ post.data.title }}</a></li>
      {% endfor %}
      </ul>
  </div>
  <div class="py-8 mx-auto">
    <article class="py-8 md:mt-0 prose-lg sm:prose-xl md:prose-xl xl:prose-2xl max-w-full sm:max-w-xl md:max-w-2xl lg:max-w-screen-sm xl:max-w-screen-md 2xl:max-w-screen-lg px-8 bg-white">
      <h1 class="py-6 font-mono"> {{title}}</h1>
    <div class="font-mono leading-10 text-2xl">
      {{content | safe}}
    </div>
  
      
    </article>  
  </div>

 
</div>

</div>

